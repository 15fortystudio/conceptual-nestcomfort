---
// src/pages/[lang]/gallery/page-2.astro

// ----- Components

import Banner from '../../../components/sections/Banner.astro';
import BaseLayout from '../../../layouts/BaseLayout.astro';
import ContentGallery from '../../../components/sections/ContentGallery.astro';

// ----- Images

import Gallery from '../../../assets/images/bg/bg-gallery.webp';
import Photo0 from '../../../assets/images/gallery/photo0.webp';
import Photo1 from '../../../assets/images/gallery/photo1.webp';
import Photo2 from '../../../assets/images/gallery/photo2.webp';
import Photo3 from '../../../assets/images/gallery/photo3.webp';
import Photo4 from '../../../assets/images/gallery/photo4.webp';
import Photo5 from '../../../assets/images/gallery/photo5.webp';

export async function getStaticPaths() {
	return [{ params: { lang: 'es' } }, { params: { lang: 'en' } }];
}

const { lang = 'es' } = Astro.params;

const translations = {
	es: {
		previous: 'Anterior',
	},
	en: {
		previous: 'Previous',
	},
};

const t = translations[lang] ?? translations['es'];
---

<BaseLayout lang={lang}>
	<Banner imageSrc={Gallery} key="gallery" lang={lang} />

	<section class="">
		<ContentGallery photos={[Photo0, Photo1, Photo2, Photo3, Photo4, Photo5]} />
	</section>

	<!-- NavegaciÃ³n inferior -->
	<nav class="text-center">
		<a href={`/${lang}/gallery/`}>&lt; {t.previous}</a>
	</nav>
</BaseLayout>
