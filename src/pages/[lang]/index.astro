---
// src/pages/[lang]/index.astro

import BaseLayout from '../../layouts/BaseLayout.astro';

// ----- Components

import Banner from '../../components/sections/Banner.astro';
import CallToAction from '../../components/sections/CallToAction.astro';
import Projects from '../../components/sections/Projects.astro';
import TextImage from '../../components/ui/TextImage.astro';
import VirtualAdvice from '../../components/sections/VirtualAdvice.astro';
import FAQs from '../../components/sections/FAQs.astro';
import Experience from '../../components/sections/Experience.astro';
import Divider from '../../components/ui/Divider.astro';
import SectionServices from '../../components/sections/SectionServices.astro';
import SectionTestimonials from '../../components/sections/SectionTestimonials.astro';

// ----- Images

import IndexBanner from '../../assets/images/bg/bg-index.webp';
import Index01 from '../../assets/images/index/index-01.webp';
import Index02 from '../../assets/images/index/index-02.webp';
import Index03 from '../../assets/images/index/index-03.webp';
import CTA from '../../assets/images/cta.webp';
import Guides from '../../components/sections/Guides.astro';

// ----- Function

export async function getStaticPaths() {
	return [{ params: { lang: 'es' } }, { params: { lang: 'en' } }];
}

const { lang = 'es' } = Astro.params;
---

<BaseLayout lang={lang}>
	<Banner imageSrc={IndexBanner} key="index" lang={lang} />
	<TextImage lang={lang} imageSrc={Index01} Key={0} reverse={true} />
	<VirtualAdvice lang={lang} />

	<SectionServices lang={lang} />
	<Guides lang={lang} />
	<TextImage lang={lang} imageSrc={Index02} Key={1} reverse={false} />
	<Divider />
	<TextImage lang={lang} imageSrc={Index03} Key={2} reverse={true} />
	<Divider />
	<Projects lang={lang} />
	<SectionTestimonials lang={lang} />
	<FAQs lang={lang} />
	<Experience lang={lang} />
	<CallToAction lang={lang} imageSrc={CTA} />
</BaseLayout>
