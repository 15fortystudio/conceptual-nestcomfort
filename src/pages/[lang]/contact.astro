---
// src/pages/[lang]/contact.astro

// ---------- COMPONENTS ----------

import BaseLayout from '../../layouts/BaseLayout.astro';
import Banner from '../../components/sections/Banner.astro';
import CallToAction from '../../components/sections/CallToAction.astro';
import Map from '../../components/Map.astro';

// ---------- IMAGE ----------

import ContactBanner from '../../assets/images/bg/bg-contact.webp';
import CTA from '../../assets/images/cta.webp';

// ---------- FUNCTION ----------

const { lang = 'es' } = Astro.params;

// Traducciones directamente en el componente
// Traducciones directamente en el componente
const translations = {
	es: {
		alt: 'Dirección de Google Maps',
		title: '¿Hablamos?',
		paragraph01:
			'Si tienes dudas, una idea rondando en la cabeza o simplemente quieres saber cómo podríamos trabajar juntos, me encantará escucharte.',
		paragraph02: 'Correo: contacto@nestcomfort.mx',
		paragraph03:
			'Respondo en un plazo de 24 a 48 horas hábiles, de lunes a viernes entre 10 am y 6 pm. Si escribes fuera de ese horario, te contesto lo antes posible.',
	},
	en: {
		alt: 'Google Maps address',
		title: 'Shall we talk?',
		paragraph01:
			'If you have any doubts, an idea in mind, or simply want to know how we could work together, I would love to listen to you.',
		paragraph02: 'Email: contacto@nestcomfort.mx',
		paragraph03:
			'I respond within 24 to 48 business hours, Monday through Friday between 10 am and 6 pm. If you write outside of those hours, I will reply as soon as possible.',
	},
};

export async function getStaticPaths() {
	return [{ params: { lang: 'es' } }, { params: { lang: 'en' } }];
}

const t = translations[lang] ?? translations['es'];
---

<BaseLayout lang={lang}>
	<Banner imageSrc={ContactBanner} key="contact" lang={lang} />

	<section class="mx-auto flex max-w-[80%] flex-col items-stretch gap-8">
		<span class="sr-only">{t.title}</span>
		<div class="mx-auto flex w-full flex-col gap-8 md:flex-row">
			<div class="mx-auto flex flex-col justify-center gap-8 text-left md:w-1/2">
				<h2 class="text-center">{t.title}</h2>
				<p>{t.paragraph01}</p>
				<p class="">{t.paragraph02}</p>
				<p class="">{t.paragraph03}</p>
			</div>
			<div class="radius relative min-h-[300px] items-stretch shadow-2xl md:w-1/2 xl:min-h-[500px]">
				<div class="radius absolute inset-0 shadow-2xl">
					<Map class="radius h-full w-full shadow-2xl" />
				</div>
			</div>
		</div>
	</section>

	<CallToAction lang={lang} imageSrc={CTA} />
</BaseLayout>
