---
// src/components/layouts/Footer.astro
import Lang from '../../components/ui/Lang.astro';
import Navigation from './Navigation.astro';

const { lang = 'es' } = Astro.props;
---

<footer class="bg-accent mb-4 flex h-full w-full items-center justify-between gap-4 p-4 shadow-2xl">
	<a href={`/${lang}/`} class="logo text-3xl font-bold">Nest Comfort</a>
	<Navigation lang={lang} />
	<Lang lang={lang} />
</footer>
