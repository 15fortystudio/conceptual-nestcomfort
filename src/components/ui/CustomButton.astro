const { lang = 'es', key } = Astro.props;

const translations = {
	es: {
		index: {
			title: 'Empieza hoy mismo',
			link: `/${lang}/`,
		},
		services: {
			title: 'Nuestros servicios',
			link: `/${lang}/services`,
		},
		portfolio: {
			title: 'Insp√≠rate con nuestro portafolio',
			link: `/${lang}/portfolio`,
		},
	},
	en: {
		index: {
			title: 'Start today',
			link: `/${lang}/`,
		},
		services: {
			title: 'Our services',
			link: `/${lang}/services`,
		},
		portfolio: {
			title: 'Get inspired by our portfolio',
			link: `/${lang}/portfolio`,
