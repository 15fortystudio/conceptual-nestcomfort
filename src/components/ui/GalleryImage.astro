---
// src/components/ui/GalleryImage.astro
import type { ImageMetadata } from 'astro:assets';
import { Picture } from 'astro:assets';

const { src, alt = 'Default alt text' }: { src: ImageMetadata; alt?: string } = Astro.props;
---

<figure class="radius h-full w-full shadow-2xl">
	<Picture src={src} alt={alt} class="radius h-full w-full object-cover" />
	<figcaption class="sr-only">{alt}</figcaption>
</figure>
