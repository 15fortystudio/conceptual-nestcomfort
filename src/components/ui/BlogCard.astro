---
// src/components/ui/BlogCard.astro

const { title, image, date, slug, lang = 'es' } = Astro.props;

const translations = {
	es: {
		readMore: 'Leer m√°s',
	},
	en: {
		readMore: 'Read more',
	},
};

const t = translations[lang] ?? translations['es'];
---

<article class="flex flex-col gap-4">
	<img src={image} alt={title} class="h-[300px] w-full object-cover shadow-2xl" loading="lazy" />

	<div class="text-center">
		<h3>{title}</h3>
		<time datetime={date} class="leading">{date}</time>
		<a href={`/${lang}/blog/${slug}`} class="text-primary mt-2 inline-block underline"
			>{t.readMore}</a
		>
	</div>
</article>
