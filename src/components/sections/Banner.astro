---
// src/components/Banner.astro
import { Picture } from 'astro:assets';

const { lang = 'es', imageSrc, key } = Astro.props;

// Traducciones directamente en el componente
const translations = {
	es: {
		index: {
			title: 'Creamos espacios que reflejan tu esencia con calidez, armonía y equilibrio.',
			alt: 'Sala moderna con sofá azul marino, mueble de TV blanco, arte en las paredes y vista costera con montañas y cielo azul.',
			paragraph:
				'En Nest Comfort, el diseño de interiores se vive de forma natural, armónica y funcional. Aquí encontrarás una experiencia cálida y personalizada para transformar tu hogar.',
		},
		services: {
			title: 'Servicios',
			alt: 'Una persona sostiene una muestra de tela color vino sobre un sofá marrón, rodeada de materiales de diseño, paletas de colores y un plano arquitectónico.',
		},
		about: {
			title: 'Nosotros',
			alt: 'Acogedora sala moderna con sofá seccional beige, arte decorativo y mesa de centro de mármol, iluminada por luz natural.',
		},
		portfolio: {
			title: 'Portafolio',
			alt: 'Espacio luminoso y minimalista con sofá gris, mesa de comedor con sillas negras, grandes ventanales y piso de madera clara.',
		},
		gallery: {
			title: 'Galería',
			alt: 'Sala acogedora con sofá seccional marrón, mesa de centro de madera y plantas decorativas, acentuada con paredes claras y decoración vintage.',
		},
		blog: {
			title: 'Blog',
			alt: 'Sala luminosa con una mezcla de arte colorido, sofá blanco con cojines vibrantes, alfombra estampada y modernas sillas amarillas.',
		},
		testimonies: {
			title: 'Testimonios',
			alt: 'Sala acogedora con paredes azules, mueble de madera, arte colorido, lámpara, estanterías y una pequeña planta decorativa.',
		},
		contact: {
			title: 'Contacto',
			alt: 'Habitación moderna y luminosa con escritorio blanco, iMac, cama acogedora con ropa de cama estampada y silla negra con cojín "NEW YORK".',
		},
	},
	en: {
		index: {
			title: 'We create spaces that reflect your essence with warmth, harmony, and balance.',
			alt: 'Modern living room with a navy sofa, white TV cabinet, artwork, and scenic coastal view featuring mountains and blue skies.',
			paragraph:
				'At Nest Comfort, interior design is experienced naturally, harmoniously, and functionally. Here you’ll find a warm, personalized experience to transform your home.',
		},
		services: {
			title: 'Services',
			alt: 'A person holds a burgundy fabric swatch above a brown couch, surrounded by design materials, color palettes, and a floor plan.',
		},
		about: {
			title: 'About us',
			alt: 'A cozy, modern living room featuring a beige sectional sofa, stylish artwork, and a marble coffee table, illuminated by natural light.',
		},
		portfolio: {
			title: 'Portfolio',
			alt: 'Bright, minimalist living space featuring a gray sofa, a dining table with black chairs, large windows, and light wood flooring.',
		},
		gallery: {
			title: 'Gallery',
			alt: 'Cozy living room with a brown sectional sofa, wooden coffee table, and decorative plants, accented by light walls and vintage decor.',
		},
		blog: {
			title: 'Blog',
			alt: 'Bright living room featuring a mix of colorful artwork, a white sofa with vibrant pillows, a patterned rug, and modern yellow chairs.',
		},
		testimonies: {
			title: 'Testimonies',
			alt: 'A cozy living room featuring blue walls, a wooden cabinet, colorful artwork, a lamp, bookshelves, and a small decorative plant.',
		},
		contact: {
			title: 'Contact',
			alt: 'A bright, modern bedroom featuring a white desk with an iMac, cozy bed with patterned bedding, and a black chair with a "NEW YORK" pillow.',
		},
	},
};

const t = translations[lang] ?? translations['es'];
const hasParagraph = !!t[key].paragraph;
---

<section class="relative w-full overflow-hidden">
	<span class="sr-only">Banner</span>

	<figure class="absolute inset-0 -z-10 blur-xs">
		<Picture src={imageSrc} alt={t[key].alt} class="h-full w-full object-cover" />

		<figcaption class="sr-only">{t[key].alt}</figcaption>
	</figure>

	<div class="absolute inset-0 -z-10 bg-black/70"></div>

	<div
		class={`relative z-10 mx-auto flex max-w-[80%] flex-col py-[10%] text-center ${!hasParagraph ? 'justify-center gap-0' : 'gap-12'}`}
	>
		<h1 class="whiteShadow">{t[key].title}</h1>

		{hasParagraph && <span class="p-white">{t[key].paragraph}</span>}
	</div>
</section>
